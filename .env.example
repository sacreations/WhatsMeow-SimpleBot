# WhatsApp Bot Configuration

# Database Configuration
DB_TYPE=sqlite3
DB_PATH=file:session.db?_foreign_keys=on

# Bot Configuration
BOT_NAME=WhatsApp Bot
BOT_VERSION=1.0.0
LOG_LEVEL=INFO

# Video Download API Configuration
VIDEO_API_ENDPOINT=https://api.your-video-downloader.com/download
VIDEO_API_KEY=your_api_key_here
VIDEO_API_TIMEOUT=30
VIDEO_QUALITY=720p
VIDEO_FORMAT=mp4

# YouTube API (if using YouTube Data API)
YOUTUBE_API_KEY=your_youtube_api_key_here

# TikTok API (if using TikTok API)
TIKTOK_API_KEY=your_tiktok_api_key_here

# File Storage
TEMP_DIR=./tmp
MAX_FILE_SIZE=50MB
CLEANUP_AFTER_SEND=true

# Rate Limiting
MAX_DOWNLOADS_PER_USER=10
RATE_LIMIT_WINDOW=3600

# Feature Flags
ENABLE_VIDEO_DOWNLOAD=true
ENABLE_AUTO_REPLY=true
ENABLE_COMMANDS=true

# Security
ALLOWED_DOMAINS=youtube.com,youtu.be,tiktok.com,vm.tiktok.com
MAX_MESSAGE_LENGTH=4096
